section.s-team
    .container
        .team
            h2.team__title.title Наша команда
            .team-list
                button.team-list__button.team-list__button--prev(disabled)
                    +icon('icon-arrow', 'icon-arrow', '7', '11')
                button.team-list__button.team-list__button--next
                    +icon('icon-arrow', 'icon-arrow', '7', '11')
                .js-team-list
                    .team-list__item
                        .team-list__header
                            img.team-list__avatar(src="/static/images/content/team_img-1x2.jpg" alt="Фотография тренера" width="82" height="82")
                            .team-list__specification
                                .team-list__instructor
                                    span.team-list__name Инструктор<br> Серёжа Попов
                                    span.team-list__variety Ханта-Йога
                                .team-list__social
                                    a.team-list__link.team-list__link--vk(href="#")
                                        +icon("icon-vk","team-list__icon team-list__icon--vk", "16", "10")
                                    a.team-list__link.team-list__link--tweeter(href="#")
                                        +icon("icon-twitter", " team-list__icon team-list__icon--tweeter", "18", "12")
